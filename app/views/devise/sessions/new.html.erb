<div class="container">
  <div class="wrapper">
    <div class="text-center">
      <h2 class="mb-3">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label_html: { class: "form-label" },
                      input_html: { class: "form-control", autocomplete: "email" } %>
        </div>
        <div class="form-inputs">
          <%= f.input :password,
                      required: false,
                      label_html: { class: "form-label" },
                      input_html: { class: "form-control", autocomplete: "current-password" } %>
        </div>
        <div class="flex content-center mx-1" style="border: none;">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "sign-in-button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
